<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Biểu đồ</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <canvas id="chart"></canvas>
  <script>
    fetch('/data')
      .then(response => response.json())
      .then(data => {
        const ctx = document.getElementById('chart').getContext('2d');
        const chart = new Chart(ctx, {
          type: 'line',
          data: data,
          options: {
            scales: {
              yAxes: [{
                ticks: {
                  beginAtZero: true
                }
              }]
            }
          }
        });
      });
  </script>
</body>
</html>